<%# ヘッダー%>
<div class= 'top_header'>
 <div class='sub_header'>
  <div class='search-bar-contents'>
    <div class='apuri_mei_waku'>
     <h1 class = 'apuri_mei'>HOT   TATOO</h1>
    </div>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='検索する'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
 </div>
</div>




<%# トップページの施設一覧 %>
<div class='spa-contents'>
    <h2 class='title'>温泉施設一覧</h2>
    <ul class='spa-lists'>
      <%# each doで施設を一個一個出してる %>
      <% @spas.each do |spa|%>

      <%# link do でこの範囲のやつ、クリックしたら詳細ページに飛べるようにしてる%>
      
         
        <%= link_to spa_path(spa.id) do  %>
         <div class="content_post" >
             <div class="more">
               <span><%= image_tag spa.image, class: "spa-img" %></span>
               

             </div>
            <p class="spa_name"><%= "#{spa.name}" %></p>
         </div>
        <% end %>
      
     <% end %>
    </ul>
</div>






















