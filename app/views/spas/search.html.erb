<%# ヘッダー%>
<div class= 'top_header'>
 <div class='sub_header'>
  <div class='search-bar-contents'>
    <ul class='search-bar-contents-top'>
        <li class='search-bar-contents'>
         <%= link_to "HOT", spas_path, class:"apuri_mei"%>
        </li>
        <li class='search-bar-contents'>
          <%= link_to "TATOO", spas_path, class:"apuri_mei"%>
        </li>
    </ul>
    <%= form_with(url: search_spas_path, local: true, method: :get) do |f| %>
    <form class="search-form" action="#">
      <%= f.text_field :keyword, placeholder: "検索する", class: "input-box" %>
      
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <% end%>
  </div>
 </div>
</div>


<%#検索結果%>
<div class='spa-contents'>
    <h2 class='title'>温泉施設一覧</h2>
    <ul class='spa-lists'>
      <%# each doで施設を一個一個出してる %>
      <% @spas.each do |spa|%>

      <%# link do でこの範囲のやつ、クリックしたら詳細ページに飛べるようにしてる%>
      
         
        <%= link_to spa_path(spa.id) do  %>
         <div class="content_post" >
             <div class="more">
               <span><%= image_tag spa.image, class: "spa-img" %></span>
               

             </div>
            <p class="spa_name"><%= "#{spa.name}" %></p>
         </div>
        <% end %>
      
      <% end %>
    </ul>
</div>

